@model ClientCaseStudy.Models.Client
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<h2>Add New Client</h2>

<form asp-action="AddClient" method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Company Name</label>
        <input asp-for="CompanyName" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Web URL</label>
        <input asp-for="WebUrl" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Category</label>
        <select asp-for="Category" class="form-select">
            <option>Low_Level_Managed_IT_Services</option>
            <option>Mid_Level_Managed_IT_Services</option>
            <option>High_Level_Managed_IT_Services</option>
            <option>On-Demand_IT_Services</option>
            <option>Hardware_Support</option>
            <option>Software_Services</option>
            <option>Network_Management</option>
        </select>
    </div>
    <div class="col-md-6">
        <label class="form-label">Standard</label>
        <select asp-for="Standard" class="form-select">
            <option>CMMI1</option>
            <option>CMMI2</option>
            <option>CMMI3</option>
            <option>CMMI4</option>
            <option>CMMI5</option>
            <option>ISO</option>
            <option>None</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="ShowAllClientDetails" class="btn btn-secondary">Cancel</a>
    </div>
</form>
