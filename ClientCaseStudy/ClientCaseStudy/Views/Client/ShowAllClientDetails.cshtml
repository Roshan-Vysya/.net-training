@model List<ClientCaseStudy.Models.Client>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
@{
    ViewData["Title"] = "Client Directory";
}

<h2 class="text-center">Client Directory</h2>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Company</th>
            <th>Website</th>
            <th>Email</th>
            <th>Category</th>
            <th>Standard</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.ClientId</td>
                <td>@client.CompanyName</td>
                <td><a href="@client.WebUrl" target="_blank">@client.WebUrl</a></td>
                <td>@client.Email</td>
                <td>@client.Category</td>
                <td>@client.Standard</td>
                <td>
                    <a asp-action="GetDetailsByClientId" asp-route-id="@client.ClientId" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddClient" class="btn btn-primary">Add New Client</a>
